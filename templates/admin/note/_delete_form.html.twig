<div class="p-3">
	<form method="post" action="{{ path('app_admin_note_delete', {'id': note.id}) }}" onsubmit="return confirm('{{ 'Are you sure you want to delete this note?' | trans }}');">
		<input type="hidden" name="_method" value="POST">
		<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ note.id) }}">
		<button class="btn btn-error" type="submit">
			<i class="i-tabler-trash text-lg"></i>
			{% trans %}Delete Note{% endtrans %}
		</button>
	</form>
</div>
