{% extends 'admin/note/index.html.twig' %}


{% block backLink %}
	<a href="{{ path('app_admin_note_index') }}" class="btn btn-outline">
		<i class="i-tabler-chevron-left"></i>
		{% trans %}Back{% endtrans %}
	</a>
{% endblock %}

{% block body %}
	<div class="flex flex-wrap p-3">
		<div class="md:w-9/12 w-full">				
			{{ component('LiveForms:LiveNoteFormComponent', { initialFormData: note }) }}
		</div>
	</div>
	{% if note.id %}
		{{ include('admin/note/_delete_form.html.twig') }}
	{% endif %}
{% endblock %}
