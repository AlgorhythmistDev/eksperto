{# Learn how to use Turbo Streams: https://github.com/symfony/ux-turbo#broadcast-doctrine-entities-update #}
{% block create %}
	<turbo-stream action="prepend" target="notes">
		<template>
			{% include "admin/note/_row.html.twig" with {
				object: entity,
				action: "create"
			} %}
		</template>
	</turbo-stream>
{% endblock %}

{% block update %}
	<turbo-stream action="replace" target="note_{{ id }}">
		<template>
			{% include "admin/note/_row.html.twig" with {
				object: entity,
				action: "update"
			} %}
		</template>
	</turbo-stream>
{% endblock %}

{% block remove %}
	<turbo-stream action="replace" target="note_{{ id }}">
		<template>
			{% include "admin/note/_row.html.twig" with {
				object: entity,
				action: "remove"
            } %}
		</template>
	</turbo-stream>
{% endblock %}
